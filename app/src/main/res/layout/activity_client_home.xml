<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@color/white"
    tools:context=".ClientHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👋 Welcome"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to enjoy your stay?\nLet's make a reservation!"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp" />


        <Button
            android:id="@+id/btn_make_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛏️ Make a Reservation"
            android:textSize="18sp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginBottom="32dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🕑 Check-in: 14:00 | Check-out: 11:00\n☎️ +123 456 789\n📍 123 Hotel St, City"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_my_reservations"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="🧾 My Reservations"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="#DDDDDD"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="💬 Chat"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="#DDDDDD"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="📷 Gallery"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="#DDDDDD"
                android:layout_margin="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/room_2_etoiles"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple Room ⭐⭐\nBasic stay – affordable and functional."
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/room_3_etoiles"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$150"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Room ⭐⭐⭐\nGood comfort – well-balanced and practical."
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/room_5_etoiles"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luxury Room ⭐⭐⭐⭐\nBest quality – spacious, modern, and fully equipped."
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>